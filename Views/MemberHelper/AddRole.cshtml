@model List<string>
@{
    ViewBag.Title = "AddRole";
}

<h2>Add Role</h2>

@using (Html.BeginForm("AddRole"))
{
    <p>Input Role Name: @Html.TextBox("roleName") </p>
    <input style="margin-left:130px" type="submit" value="Add Role" />
}

@if (Model != null)
{
    <h3>LIST OF ROLES</h3>
    <ul>
        @foreach (var roleName in Model)
        {
            <li>@roleName</li>
        }
    </ul>
}